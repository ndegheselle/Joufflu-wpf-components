<UserControl
    x:Class="Joufflu.Data.Schema.Components.IconDataType"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Joufflu.Data.Schema.Components"
    mc:Ignorable="d"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    x:Name="ContainerElement">
    <StackPanel DataContext="{Binding ElementName=ContainerElement}" Orientation="Horizontal">
        <fonts:Icon Text="{Binding Icon}" ToolTip="{Binding Type}" />
        <TextBlock
            Margin="4,0,0,0"
            VerticalAlignment="Center"
            Text="{Binding Type}">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding WithText}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </StackPanel>
</UserControl>
