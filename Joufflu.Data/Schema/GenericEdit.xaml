<UserControl
    x:Class="Joufflu.Data.Schema.GenericEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Joufflu.Data.Schema"
    xmlns:collections="clr-namespace:System.Collections.Generic;assembly=System.Runtime"
    mc:Ignorable="d"
    x:Name="ContainerElement">
    <UserControl.Resources>

        <HierarchicalDataTemplate
            x:Key="ObjectTemplate"
            DataType="{x:Type local:GenericObject}"
            ItemsSource="{Binding Properties.Values}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Schema.Name}" />
                <TextBlock Text=" (Object)" />
            </StackPanel>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate
            x:Key="ArrayTemplate"
            DataType="{x:Type local:GenericArray}"
            ItemsSource="{Binding Values}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Schema.Name}" />
                <TextBlock Text="(Array)" />
            </StackPanel>
        </HierarchicalDataTemplate>
        <DataTemplate x:Key="ValueTemplate" DataType="{x:Type local:GenericValue}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Schema.Name}" />
                <TextBox />
            </StackPanel>
        </DataTemplate>

        <local:DepthToMarginConverter x:Key="DepthToMarginConverter" />
        <local:GenericTemplateSelector
            x:Key="GenericTemplateSelector"
            ObjectTemplate="{StaticResource ObjectTemplate}"
            ArrayTemplate="{StaticResource ArrayTemplate}"
            ValueTemplate="{StaticResource ValueTemplate}" />
    </UserControl.Resources>

    <TreeView
        ItemTemplateSelector="{StaticResource GenericTemplateSelector}"
        DataContext="{Binding ElementName=ContainerElement}"
        ItemsSource="{Binding Root.Properties.Values}" />
</UserControl>
