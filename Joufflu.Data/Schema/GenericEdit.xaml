<UserControl
    x:Class="Joufflu.Data.Schema.GenericEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Joufflu.Data.Schema"
    xmlns:inputs="clr-namespace:Joufflu.Inputs;assembly=Joufflu.Inputs"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:collections="clr-namespace:System.Collections.Generic;assembly=System.Runtime"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    mc:Ignorable="d"
    x:Name="ContainerElement">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Joufflu.Data;component/Schema/SchemaTreeView.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:ValueTemplateSelector x:Key="ValueTemplateSelector">
                <local:ValueTemplateSelector.StringTemplate>
                    <DataTemplate DataType="{x:Type local:GenericValue}">
                        <TextBox Padding="4,2" Text="{Binding Value, Mode=TwoWay}" />
                    </DataTemplate>
                </local:ValueTemplateSelector.StringTemplate>
                <local:ValueTemplateSelector.BooleanTemplate>
                    <DataTemplate DataType="{x:Type local:GenericValue}">
                        <CheckBox IsChecked="{Binding Value, Mode=TwoWay}" />
                    </DataTemplate>
                </local:ValueTemplateSelector.BooleanTemplate>
                <local:ValueTemplateSelector.DecimalTemplate>
                    <DataTemplate DataType="{x:Type local:GenericValue}">
                        <inputs:DecimalUpDown Value="{Binding Value, Mode=TwoWay}" />
                    </DataTemplate>
                </local:ValueTemplateSelector.DecimalTemplate>
                <local:ValueTemplateSelector.DateTimeTemplate>
                    <DataTemplate DataType="{x:Type local:GenericValue}">
                        <Calendar SelectedDate="{Binding Value, Mode=TwoWay}" />
                    </DataTemplate>
                </local:ValueTemplateSelector.DateTimeTemplate>
                <local:ValueTemplateSelector.TimeSpanTemplate>
                    <DataTemplate DataType="{x:Type local:GenericValue}">
                        <inputs:TimeSpanPicker Value="{Binding Value, Mode=TwoWay}" />
                    </DataTemplate>
                </local:ValueTemplateSelector.TimeSpanTemplate>
            </local:ValueTemplateSelector>

            <HierarchicalDataTemplate
                x:Key="ObjectTemplate"
                DataType="{x:Type local:GenericObject}"
                ItemsSource="{Binding Properties}">
                <local:Separators Element="{Binding Schema}">
                    <local:IconDataType
                        Margin="6,2"
                        Opacity="0.6"
                        Type="Object" />
                </local:Separators>
            </HierarchicalDataTemplate>

            <HierarchicalDataTemplate
                x:Key="ArrayTemplate"
                DataType="{x:Type local:GenericArray}"
                ItemsSource="{Binding Values}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <local:Separators Element="{Binding Schema}">
                        <local:IconDataType
                            Margin="6,2"
                            Opacity="0.6"
                            Type="Array" />
                    </local:Separators>
                    <StackPanel
                        Orientation="Horizontal"
                        Grid.Column="2"
                        HorizontalAlignment="Right">
                        <Button Style="{StaticResource IconButtonSmall}" Command="{Binding AddCommand}">
                            <fonts:Icon Text="{x:Static fonts:IconFont.Plus}" />
                        </Button>
                        <Button Style="{StaticResource IconButtonSmall}" Command="{Binding RemoveCommand}">
                            <fonts:Icon Text="{x:Static fonts:IconFont.Trash}" />
                        </Button>
                    </StackPanel>
                </Grid>
            </HierarchicalDataTemplate>

            <DataTemplate x:Key="NodeTemplate" DataType="{x:Type local:IGenericNode}">
                <local:Separators Element="{Binding Schema}">
                    <TextBlock>ELEMAANT</TextBlock>
                </local:Separators>
            </DataTemplate>

            <HierarchicalDataTemplate
                x:Key="ObjectKeyTemplate"
                DataType="{x:Type collections:KeyValuePair`2}"
                ItemsSource="{Binding Value.Properties}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition SharedSizeGroup="Name" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <local:Separators Element="{Binding Value.Schema}">
                        <TextBlock Text="{Binding Key}" />
                    </local:Separators>
                    <local:IconDataType
                        Grid.Column="1"
                        Margin="6,2"
                        Opacity="0.6"
                        Type="Object" />
                </Grid>
            </HierarchicalDataTemplate>

            <HierarchicalDataTemplate
                x:Key="ArrayKeyTemplate"
                DataType="{x:Type collections:KeyValuePair`2}"
                ItemsSource="{Binding Value.Values}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition SharedSizeGroup="Name" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <local:Separators Element="{Binding Value.Schema}">
                        <TextBlock Text="{Binding Key}" />
                    </local:Separators>
                    <local:IconDataType
                        Grid.Column="1"
                        Margin="6,2"
                        Opacity="0.6"
                        Type="Array" />

                    <StackPanel
                        Orientation="Horizontal"
                        Grid.Column="2"
                        HorizontalAlignment="Right">
                        <Button Style="{StaticResource IconButtonSmall}" Command="{Binding Value.AddCommand}">
                            <fonts:Icon Text="{x:Static fonts:IconFont.Plus}" />
                        </Button>
                        <Button Style="{StaticResource IconButtonSmall}" Command="{Binding Value.RemoveCommand}">
                            <fonts:Icon Text="{x:Static fonts:IconFont.Trash}" />
                        </Button>
                    </StackPanel>
                </Grid>
            </HierarchicalDataTemplate>

            <DataTemplate x:Key="NodeKeyTemplate" DataType="{x:Type collections:KeyValuePair`2}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition SharedSizeGroup="Name" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <local:Separators Element="{Binding Value.Schema}">
                        <TextBlock Text="{Binding Key}" />
                    </local:Separators>
                    <TextBlock Grid.Column="1">ELAMAMAMAMAT</TextBlock>
                </Grid>
            </DataTemplate>

            <local:GenericTemplateSelector
                x:Key="GenericTemplateSelector"
                ObjectKeyTemplate="{StaticResource ObjectKeyTemplate}"
                ArrayKeyTemplate="{StaticResource ArrayKeyTemplate}"
                NodeKeyTemplate="{StaticResource NodeKeyTemplate}"
                ObjectTemplate="{StaticResource ObjectTemplate}"
                ArrayTemplate="{StaticResource ArrayTemplate}"
                NodeTemplate="{StaticResource NodeTemplate}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <TreeView
        Grid.IsSharedSizeScope="True"
        ItemTemplateSelector="{StaticResource GenericTemplateSelector}"
        ItemContainerStyle="{StaticResource SchemaTreeViewItem}"
        DataContext="{Binding ElementName=ContainerElement}"
        ItemsSource="{Binding Root.Properties}" />

</UserControl>
