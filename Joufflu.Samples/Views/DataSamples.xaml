<UserControl
    x:Class="Joufflu.Samples.Views.DataSamples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:schema="clr-namespace:Joufflu.Data.Schema;assembly=Joufflu.Data"
    xmlns:data="clr-namespace:Joufflu.Data;assembly=Joufflu.Data"
    xmlns:dnd="clr-namespace:Joufflu.Data.DnD;assembly=Joufflu.Data"
    xmlns:local="clr-namespace:Joufflu.Samples.Views"
    xmlns:main="clr-namespace:Joufflu.Samples"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ContainerElement"
    mc:Ignorable="d">
    <Grid DataContext="{Binding ElementName=ContainerElement}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock FontWeight="Bold" Margin="0,6,0,2">Pagging</TextBlock>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <DataGrid x:Name="PagingDataGrid" />
            <data:Paging
                Grid.Row="1"
                Margin="0,2,0,0"
                Capacity="5"
                PagingChange="Paging_PagingChange"
                Total="{Binding Total}" />
        </Grid>

        <TextBlock
            Grid.Row="2"
            FontWeight="Bold"
            Margin="0,6,0,2">
            Drag and drop
        </TextBlock>
        <Grid Grid.Row="3" Margin="0,2,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ItemsControl
                BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer0BorderBrush}}"
                BorderThickness="1"
                ItemsSource="{Binding DnDValues}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type main:TestClass}">
                        <Border
                            Height="24"
                            Margin="1"
                            Padding="6,4"
                            dnd:DragBehavior.Handler="{Binding DragHandler, ElementName=ContainerElement, Mode=OneTime}"
                            Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}"
                            BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer0BorderBrush}}"
                            BorderThickness="1"
                            CornerRadius="2"
                            Cursor="Hand">
                            <TextBlock Text="{Binding Name}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <ListBox
                Grid.Column="2"
                Margin="2,0,0,0"
                dnd:DropBehavior.Handler="{Binding DropHandler, Mode=OneTime}"
                BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer0BorderBrush}}"
                BorderThickness="1"
                ItemsSource="{Binding DropHandler.Dropped}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type main:TestClass}">
                        <Border
                            Height="24"
                            Margin="1"
                            Padding="6,4"
                            Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}"
                            BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer0BorderBrush}}"
                            BorderThickness="1"
                            CornerRadius="2"
                            Cursor="Hand">
                            <TextBlock Text="{Binding Name}" />
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <TextBlock
            Grid.Row="4"
            FontWeight="Bold"
            Margin="0,6,0,2">
            Data
        </TextBlock>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <schema:GenericEdit
                Root="{Binding GenericObject}"
                WithSchemaEdit="True" 
                WithValueEdit="False"/>
            <schema:GenericEdit
                Grid.Column="1"
                Root="{Binding GenericObject}"
                WithSchemaEdit="False" />
        </Grid>
    </Grid>
</UserControl>
