<UserControl
    x:Class="Joufflu.Samples.Views.HistorySample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fonts="clr-namespace:Joufflu.Shared.Resources.Fonts;assembly=Joufflu.Shared"
    xmlns:local="clr-namespace:Joufflu.Samples.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ContainerElement"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid DataContext="{Binding ElementName=ContainerElement}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <GroupBox Header="Content">
            <TextBlock Text="{Binding TestText}" />
        </GroupBox>

        <Grid Grid.Column="1" Margin="2,0,0,0">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel>
                <Button Command="{Binding AddRandomCharCommand}">AddRandomChar</Button>
                <Button Margin="0,1,0,0" Command="{Binding RemoveLastCharCommand}">RemoveRandomChar</Button>
                <Button Margin="0,1,0,0" Command="{Binding AddMultipleRandomCharCommand}">AddMultipleRandomChar</Button>
                <Button Margin="0,1,0,0" Command="{Binding RemoveMultipleLastCharCommand}">RemoveMultipleLastChar</Button>
            </StackPanel>

            <GroupBox
                Grid.Row="1"
                Margin="0,2,0,0"
                Header="Stack">
                <ItemsControl ItemsSource="{Binding Handler.Stack}" />
            </GroupBox>
            <StackPanel
                Grid.Row="1"
                Height="26"
                Margin="4"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button Command="{Binding Handler.UndoCommand}">
                    <fonts:Icon Text="{x:Static fonts:IconFont.ArrowCounterClockwise}" />
                </Button>
                <Button Margin="2,0,0,0" Command="{Binding Handler.RedoCommand}">
                    <fonts:Icon Text="{x:Static fonts:IconFont.ArrowClockwise}" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
