<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Joufflu.Inputs.Components"
    xmlns:format="clr-namespace:Joufflu.Inputs.Components.Format">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Joufflu.Inputs;component/Components/Format/FormatTextBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:TimeSpanPicker}" BasedOn="{StaticResource {x:Type format:FormatTextBox}}">
        <Setter Property="GlobalFormat" Value="numeric|min:0|padded|nullable" />
        <Setter Property="Format" Value="{}{max:365}d {max:23}h {max:59}m {max:59}s" />
    </Style>
</ResourceDictionary>